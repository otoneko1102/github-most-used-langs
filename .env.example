# GitHub Username (default user, backward compatible)
GITHUB_USERNAME=your-github-username

# Target Usernames for scheduled data fetch (comma-separated)
# If not set, GITHUB_USERNAME will be used
TARGET_USERNAMES=user1,user2,user3

# GitHub Personal Access Token
GITHUB_TOKEN=your-github-token

# PORT
PORT=3086

# CACHE
CACHE_TTL_SECONDS=3600
CACHE_DIR=./cache

# CORS
ALLOWED_ORIGINS=*

# Include private repositories (true/false)
INCLUDE_PRIVATE=false

# Scheduler (set to false to disable)
SCHEDULER_ENABLED=true
